<Window x:Class="IPIO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPIO"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <StackPanel>
        <Button Width="400" Height="50" FontSize="30" Content="Choose file..." HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="ChooseFileButton_Click"/>
        <Button x:Name="SaveButton" IsEnabled="False" Width="400" Height="50" FontSize="30" Content="Save" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="SaveFileButton_Click"/>
        <ProgressBar Margin="0,50,0,10" Minimum="0" Maximum="100" x:Name="ProgressBar"/>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="ImageBefore" Margin="20,0,0,0" Height="540" Width="550"/>
            <Image x:Name="ImageAfter" Margin="50,0,30,0" Height="540" Width="550"/>
        </StackPanel>
    </StackPanel>
</Window>
