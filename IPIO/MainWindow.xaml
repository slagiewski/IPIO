        <Button Content="Choose file..." HorizontalAlignment="Center" Margin="60,10,0,0" VerticalAlignment="Top" Click="ChooseFileButton_Click"/>
        <Image x:Name="ImageBefore" Height="225" Width="290"/>
        <Image x:Name="ImageAfter"  Height="225" Width="290"/>
    </StackPanel>


</Window>
